<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llBackGround"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.deerslab.mathbomb.GameActivity"
    android:orientation="vertical"
    android:background="@drawable/game_background"
    android:onClick="onClick"
    >

    <LinearLayout
        android:id="@+id/llScreen"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/screen"
        android:layout_margin="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/tvTime"
            android:textColor="@color/colorConsolText"
            android:typeface="sans"
            android:gravity="center"
            android:textSize="60sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/tvQuest"
            android:layout_weight="2"
            android:textColor="@color/colorConsolText"
            android:typeface="sans"
            android:gravity="center"
            android:textSize="80sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:id="@+id/viewProgress"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <View
                    android:id="@+id/progress10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
                <View
                    android:id="@+id/progress9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
                <View
                    android:id="@+id/progress8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
                <View
                    android:id="@+id/progress7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
                <View
                    android:id="@+id/progress6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
                <View
                    android:id="@+id/progress5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
                <View
                    android:id="@+id/progress4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
                <View
                    android:id="@+id/progress3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
                <View
                    android:id="@+id/progress2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
                <View
                    android:id="@+id/progress1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
            </LinearLayout>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/tvAnswer"
            android:layout_weight="2"
            android:textColor="@color/colorConsolText"
            android:typeface="sans"
            android:gravity="center"
            android:textSize="40sp"/>

            <LinearLayout
                android:id="@+id/lifeProgress"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <View
                    android:id="@+id/life4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/blank_rect"/>
                <View
                    android:id="@+id/life3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_rect"/>
                <View
                    android:id="@+id/life2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_rect"/>
                <View
                    android:id="@+id/life1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_rect"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llButtons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:baselineAligned="false"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/btn1"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                android:textSize="60sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/btn4"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                android:textSize="60sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/btn7"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                android:textSize="60sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:id="@+id/btnClr"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/btn2"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                android:textSize="60sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/btn5"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                android:textSize="60sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/btn8"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                android:textSize="60sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/btn0"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/btn3"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                android:textSize="60sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/btn6"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                android:textSize="60sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                android:textSize="60sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:id="@+id/btnEnter"
                android:layout_weight="1"
                android:background="@drawable/green_button"
                android:layout_margin="1dp"
                style="@style/GameButtons"
                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/adText"
        android:id="@+id/AdButton"
        android:layout_weight="1"
        android:background="@drawable/gray_button_selector"
        android:layout_margin="1dp"
        style="@style/GameButtons"
        />

</LinearLayout>
